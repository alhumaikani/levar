@model HomeViewModel

@{ ViewData["Title"] = "Index"; }


<!-- Masthead -->
<header class="masthead bg-primary text-white text-center">
    <div class="container d-flex align-items-center flex-column">

        <!-- Masthead Avatar Image -->
        <img class="masthead-avatar mb-5" src="~/img/@Model.Owner.Avatar" style="width:1400px" height="1000" alt="">

        <!-- Masthead Heading -->
        <h1 class="masthead-heading text-uppercase mb-0">@Model.Owner.FullName</h1>

        <!-- Icon Divider -->
        <div class="divider-custom divider-light">
            <div class="divider-custom-line"></div>
            <div class="divider-custom-icon">
                <i class="fas fa-star"></i>
            </div>
            <div class="divider-custom-line"></div>
        </div>

        <!-- Masthead Subheading -->
        <p class="masthead-subheading font-weight-light mb-0">@Model.Owner.Profil</p>

    </div>
</header>

<!-- Portfolio Section -->
<section class="page-section portfolio" id="portfolio">
    <div class="container">

        <!-- Portfolio Section Heading -->
        <h2 class="page-section-heading text-center text-uppercase text-secondary mb-0">اعثر على مطبخ أحلامك</h2>

        <!-- Icon Divider -->
        <div class="divider-custom">
            <div class="divider-custom-line"></div>
            <div class="divider-custom-icon">
                <i class="fas fa-star"></i>
            </div>
            <div class="divider-custom-line"></div>
        </div>

        <!-- Portfolio Grid Items -->
        <div class="row">

            <!-- Portfolio Item 1 -->
            @foreach (var portfolioItem in Model.PortfolioItems)
            {
<div class="col-md-6 col-lg-4">
    <div class="portfolio-item mx-auto" data-toggle="modal" data-target="#item-@portfolioItem.Id">
        <div class="portfolio-item-caption d-flex align-items-center justify-content-center h-100 w-100">
            <div class="portfolio-item-caption-content text-center text-white">
                <i class="fas fa-plus fa-3x"></i>
            </div>
        </div>
        <img class="img-fluid" src="~/img/portfolio/@portfolioItem.ImageUrl" alt="">
    </div>
</div>            }

        </div>
        <!-- /.row -->

    </div>
</section>

<!-- About Section -->
<section class="page-section bg-primary text-white mb-0" id="about" >
    <div class="container">

        <!-- About Section Heading -->
        <h2 class="page-section-heading text-center text-uppercase text-white">من نحن</h2>

        <!-- Icon Divider -->
        <div class="divider-custom divider-light">
            <div class="divider-custom-line"></div>
            <div class="divider-custom-icon">
                <i class="fas fa-star"></i>
            </div>
            <div class="divider-custom-line"></div>
        </div>

        <!-- About Section Content -->
        <div class="row">
            <div class="col-lg-4 ml-auto">
                <p class="lead">مع الرؤية الفريدة والتفرد بالتصاميم نقود الطريق في مجال الابتكار من خلال تصاميم المطابخ الفاخرة طويلة الأمد في السعوديه</p>
</div>
            <div class="col-lg-4 mr-auto">
                <p class="lead">مؤسسة ليڤار للمطابخ ذات تصميم حديث لتحسين بيئة المطبخ لجعله أكثر متعة وسهولة في الأستخدام . كل مطبخ يتم تصميمه من قبلنا يمكن حقاً أن يسمى تحفة من التصميم الفريد لتميزنا في جودة صناعة الخزائن والوحدات</p>
            </div>
        </div>

        <!-- About Section Button -->
        <div class="text-center mt-4">
            <a class="btn btn-xl btn-outline-light" dir="rtl" href="tel:0569694001">

                <i class="fas fa-download mr-2"></i>
                اضغط للاتصال
            </a>
        </div>

    </div>
</section>

<!-- Contact Section -->
<section class="page-section" id="contact">
    <div class="container">

        <!-- Contact Section Heading -->
        <h2 class="page-section-heading text-center text-uppercase text-secondary mb-0">تواصل معانا</h2>

        <!-- Icon Divider -->
        <div class="divider-custom">
            <div class="divider-custom-line"></div>
            <div class="divider-custom-icon">
                <i class="fas fa-star"></i>
            </div>
            <div class="divider-custom-line"></div>
        </div>

        <!-- Contact Section Form -->
        <div class="row">
            <div class="col-lg-8 mx-auto">
                <!-- To configure the contact form email address, go to mail/contact_me.php and update the email address in the PHP file on line 19. -->
                <form name="sentMessage" id="contactForm" novalidate="novalidate">
                    <div class="control-group">
                        <div class="form-group floating-label-form-group controls mb-0 pb-2">
                            <label>الاسم</label>
                            <input class="form-control" id="name" type="text" placeholder="الاسم" required="required" dir="rtl" data-validation-required-message=".الرجاء ادخال الاسم">
                            <p class="help-block text-danger"></p>
                        </div>
                    </div>
                    <div class="control-group">
                        <div class="form-group floating-label-form-group controls mb-0 pb-2">
                            <label>الايميل</label>
                            <input class="form-control" id="email" type="email" placeholder="البريد الالكتروني" required="required" dir="rtl" data-validation-required-message=".الرجاء ادخال البريد الالكتروني">
                            <p class="help-block text-danger"></p>
                        </div>
                    </div>
                    <div class="control-group">
                        <div class="form-group floating-label-form-group controls mb-0 pb-2">
                            <label>رقم الجوال</label>
                            <input class="form-control" id="phone" type="tel" placeholder="رقم الجوال" required="required" dir="rtl" data-validation-required-message=".الرجاء ادخال رقم الموبايل">
                            <p class="help-block text-danger"></p>
                        </div>
                    </div>
                    <div class="control-group">
                        <div class="form-group floating-label-form-group controls mb-0 pb-2">
                            <label>رسالة</label>
                            <textarea class="form-control" id="message" rows="5" placeholder="الاستفسار" required="required" dir="rtl" data-validation-required-message=".الرجاء ادخال الرسالة"></textarea>
                            <p class="help-block text-danger"></p>
                        </div>
                    </div>
                    <br>
                    <div id="success"></div>
                    <div class="form-group">
                        <button type="submit" class="btn btn-primary btn-xl" id="sendMessageButton">إرسال</button>
                    </div>
                </form>
            </div>
        </div>

    </div>
</section>



<!-- Portfolio Modals -->
<!-- Portfolio Modal 1 -->
@foreach (var item in Model.PortfolioItems)
{
<div class="portfolio-modal modal fade" id="item-@item.Id" tabindex="-1" role="dialog" aria-labelledby="portfolioModal1Label" aria-hidden="true">
    <div class="modal-dialog modal-xl" role="document">
        <div class="modal-content">
            <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                <span aria-hidden="true">
                    <i class="fas fa-times"></i>
                </span>
            </button>
            <div class="modal-body text-center">
                <div class="container">
                    <div class="row justify-content-center">
                        <div class="col-lg-8">
                            <!-- Portfolio Modal - Title -->
                            <h2 class="portfolio-modal-title text-secondary text-uppercase mb-0">@item.ProjectName</h2>
                            <!-- Icon Divider -->
                            <div class="divider-custom">
                                <div class="divider-custom-line"></div>
                                <div class="divider-custom-icon">
                                    <i class="fas fa-star"></i>
                                </div>
                                <div class="divider-custom-line"></div>
                            </div>
                            <!-- Portfolio Modal - Image -->
                            <img class="img-fluid rounded mb-5" src="~/img/portfolio/@item.ImageUrl" alt="">
                            <!-- Portfolio Modal - Text -->
                            <p class="mb-5">@item.Description</p>
                            <button class="btn btn-primary" href="#" data-dismiss="modal">
                                <i class="fas fa-times fa-fw"></i>
                                Close Window
                            </button>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>}


